          <option style="display: none;" value=""></option> <!-- Hidden empty option -->
          <% category.forEach((catData,i) => { %>
            <option value="<%= catData?.id %>">
              <%= catData?.name %>
            </option>
          <% }) %>
        </select>
        
        
      </div>
      
      <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="<%= typeof data !== 'undefined' ? data.name : '' %>"
