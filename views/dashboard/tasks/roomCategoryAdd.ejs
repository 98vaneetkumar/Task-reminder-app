<script>
  imgInp.onchange = (evt) => {
    const [file] = imgInp.files;
    if (file) {
      blah.src = URL.createObjectURL(file);
    }
  };

  $("#addRoomCategory").validate({
    rules: {
      name: {
        required: true
      },
    },
    messages: {
      name: {
        required: "Sub-category name can't be blank",
      }
    }, errorClass: "text-danger",
