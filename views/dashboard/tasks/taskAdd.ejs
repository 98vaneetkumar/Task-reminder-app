<section class="section">
  <div class="section-header">
    <h1>
      <%= typeof data !=='undefined' ?"Edit":"Add" %> Task
    </h1>
    <button class="btn btn-primary ml-2" onclick="history.back()">Back</button>

  </div>
  <form method="post" action="<%= typeof data !== 'undefined'?'/admin/edit_task':'/admin/create_task'%>">
    <div class="card-body bg-white rounded-4 shadow">
      <div class="form-group">
        <label>Name</label>
        <input class="form-control noSpace" type="text" name="title"
          value="<%= typeof data !== 'undefined' ? data?.title : ''%>" required />
        <label>Type</label>
        <select name="roomCatId" class="form-control selectric">
          <% roomCats.forEach((catData,i)=>{%>
            <option value="<%= catData?.id %>" <%=typeof data !=='undefined' && catData?.name==data.roomCat?.name
              ? "selected" : '' %> > <%= catData?.name%>
            </option>
            <%})%>
        </select>
        <input type="hidden" name="id" value="<%= typeof data !== 'undefined' ? data.id : ''%>" />
      </div>

      <button class="btn btn-primary">Submit</button>
    </div>
  </form>
</section>

<script>
  imgInp.onchange = (evt) => {
    const [file] = imgInp.files;
    if (file) {
      blah.src = URL.createObjectURL(file);
    }
  };
</script>